include blocks/config
doctype html
html
    head
        include blocks/head
        title Profilo
    body
        .app
            h1
                a(data-ajax='false' href='index.html') #{config.Sitename}
            #deviceready
                .event.listening Avvio
                #mainContent.event.received
                    form(id="profileForm",action="profile.html",style="display:none;",method="post")
                        .error
                        div
                            label(for="username") Email/Utente
                            input(type="email",id="username",name="username")
                        div
                            label(for="password") Password
                            input(type="password",id="password",name="password")
                        input(type="submit",name="submit",value="Invia")
                        a(class="recover",href="#") Recupera password
                        br
                        a(class="register",href="#") Registrati
                    form(id="recoverForm",action="profile.html",style="display:none;",method="post")
